#play(ng-show="isLoaded" role="main")
  #header(ng-controller="GameStateCtrl")
    .row.score
      h2 {{score}}
    .row.players
      ul
        li(ng-repeat="user in users", ng-class="{current: user.current}")
          | {{ user.name }}

  #main-inner
    .row.toy
      .imagesTop
        img#toyPull(src="images/toy-pull.svg")
      .imagesTop
        img#toyBody(src="images/toy-body.svg")
      .imagesTop
        img#toyBop(src="images/toy-bop.svg")
      .imagesTop
        img#toyStripes(src="images/toy-stripes.svg")
