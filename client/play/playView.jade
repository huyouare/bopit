#main(ng-show="isLoaded" role="main")
  #header(ng-controller="GameStateCtrl")
    .row.score
      h1 {{score}}
    .row.players
      ul
        li(ng-repeat="user in users", ng-class="{current: user.current}")
          | {{ user.name }}

  #main-inner
    .row.toy
      .imagesTop
        img#toyPull(src="images/toy-pull.svg")
      .imagesTop
        img#toyBody(src="images/toy-body.svg")
      .imagesTop
        img#toyBop(src="images/toy-bop.svg")
      .imagesTop
        img#toyStripes(src="images/toy-stripes.svg")

    #leap(ng-controller="LeapCtrl" ng-init="leapDebug = true")
      .leap#leapUI(ng-show="leapDebug")
        span.text-valign
          h2
      .leap(ng-show="leapDebug")
        h1 {{ output }}
      .leap#leapCanvas
        canvas#canvas

